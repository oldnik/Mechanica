@model Mechanica.Models.ViewModel.ProductsViewModel
@using Mechanica.Extensions
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-info text-center" style="margin-bottom: 2vh;">Edytuj Produkt</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Products.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Products.Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Price" class="form-control" />
                    </div>
                    <span asp-validation-for="Products.Price" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Quantity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Quantity" class="form-control" />
                    </div>
                    <span asp-validation-for="Products.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Weight"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Weight" class="form-control" />
                    </div>
                    <span asp-validation-for="Products.Weight" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Capacity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Capacity" class="form-control" />
                    </div>
                    <span asp-validation-for="Products.Capacity" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProductTypes"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Products.ProductTypeId" asp-items="Model.ProductTypes.ToSelectListItem(Model.Products.ProductTypeId)" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Image"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" class="form-control-file" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Available"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Available" class="form-control" />
                    </div>
                    <span asp-validation-for="Products.Available" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4 text-center">
                <img src="@Model.Products.Image" style="max-height: 350px; border-radius:5px; border:1px; color:aliceblue" />
            </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-secondary rounded-left" value="Zapisz" />
            <a asp-action="Index" class="btn btn-secondary rounded-right" style="margin-left:-5px;">Powrót do Listy</a>
        </div>
    </div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}