@model IEnumerable<Mechanica.Models.Products>
@{
    ViewData["Title"] = "Index";
}

<div class="row" style="margin-bottom: 2vh;">
    <div class="col-6">
        <h2 class="text-info text-right">
            Produkty
        </h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Nowy produkt</a>
    </div>
</div>
<div>
    <table class="table table-striped border table-light">
        <tr class="table-info text-center">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Available)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.ProductTypes)
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model)
        {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Price)
            </td>
            <td>
                @Html.DisplayFor(m => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(m => item.Available)
            </td>
            <td>
                @Html.DisplayFor(m => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(m => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(m => item.ProductTypes.Name)
            </td>
            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
        }
    </table>
</div>