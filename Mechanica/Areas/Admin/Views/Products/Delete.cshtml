@model Mechanica.Models.ViewModel.ProductsViewModel
@using Mechanica.Extensions
@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info text-center" style="margin-bottom: 2vh;">Usuń Produkt</h2>

<form method="post">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Products.Id" />
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Quantity"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Quantity" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Weight"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Weight" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Capacity"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Capacity" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ProductTypes.Name" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Available"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Available" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-4 text-center">
            <img src="@Model.Products.Image" style="max-height: 350px; border-radius:5px; border:1px; color:aliceblue" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Usuń" />
            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Products.Id">Edytuj</a>
            <a asp-action="Index" class="btn btn-success">Powrót do Listy</a>

        </div>
    </div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}